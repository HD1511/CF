{{>header}}
{{>navbar}}
<div class="container">
    <div class="row full-container align-items-center">
        <div class="col">
            <div class="border-login">
                <form action="/login" method="post">
                    <div class="form-group row justify-content-center pb-2">
                        <div class="col-8">
                            <div class="row">
                                <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
                                <div class="col-sm-10">
                                    <input type="email" name="email" class="form-control border-design" id="inputEmail3" placeholder="Email">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row justify-content-center pb-4">
                        <div class="col-8">
                            <div class="row">
                                <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
                                <div class="col-sm-10">
                                    <input type="password" name="password" class="form-control border-design" id="inputPassword3"
                                        placeholder="Password">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row justify-content-center">
                        <div class="col-8">
                            <div class="row">
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary">Log In</button>
                                </div>
                            </div>
                        </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{>footer}}